                <name xml:lang="jp">内容の文字数</name>
                <name xml:lang="zh-CN">内容摘要字数</name>
                <name xml:lang="zh-TW">內容字數</name>
                <name xml:lang="tr">İçerik Uzunluğu</name>
            </var>
        </group>

